# ==============================================
# FUTUROL APP - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://futurol:futurol_secret@localhost:5433/futurol"

# Database password (used by docker-compose)
DB_PASSWORD="futurol_secret"

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# JWT secret for access tokens (min 32 characters)
# Generate: openssl rand -base64 32
JWT_SECRET="change-me-in-production-use-strong-random-string-min-32-chars"

# JWT secret for refresh tokens (min 32 characters)
# Generate: openssl rand -base64 32
JWT_REFRESH_SECRET="change-me-in-production-too-use-different-string-32-chars"

# ==============================================
# APPLICATION
# ==============================================
# Node environment: development | production | test
NODE_ENV="development"

# Server port (default: 3000 in container, 5173 in dev)
PORT="3000"

# Public URLs
PUBLIC_APP_URL="http://localhost:5173"
PUBLIC_ADVISOR_URL="http://localhost:5173/radce"

# ==============================================
# FILE UPLOADS
# ==============================================
# Directory for uploaded files (relative to project root)
UPLOAD_DIR="uploads"

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE="10485760"

# ==============================================
# GOOGLE DRIVE (Optional)
# ==============================================
# Google Drive API credentials for photo storage
GOOGLE_DRIVE_FOLDER_ID=""
GOOGLE_DRIVE_CREDENTIALS='{}'

# ==============================================
# WEB PUSH NOTIFICATIONS (Optional)
# ==============================================
# VAPID keys for push notifications
# Generate: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_SUBJECT="mailto:info@futurol.cz"

# ==============================================
# EMAIL (Optional - for notifications)
# ==============================================
# SMTP settings for sending emails
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# SMTP_FROM="noreply@futurol.cz"

# ==============================================
# RESEND (Email service for measurement protocols)
# ==============================================
# Get your API key from https://resend.com
RESEND_API_KEY=""

# From address (must be verified domain in Resend)
EMAIL_FROM="Futurol <noreply@futurol.ascentalab.cz>"

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Log level: error | warn | info | debug
LOG_LEVEL="info"

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=""

# ==============================================
# DEVELOPMENT ONLY
# ==============================================
# Enable debug mode (verbose logging)
DEBUG="false"

# Disable authentication (for testing - NEVER in production!)
# DISABLE_AUTH="false"

# ==============================================
# PRODUCTION ONLY
# ==============================================
# Force HTTPS redirect
# FORCE_HTTPS="true"

# Allowed origins for CORS (comma-separated)
# ALLOWED_ORIGINS="https://futurol.ascentalab.cz,https://radce.ascentalab.cz"

# ==============================================
# NOTES
# ==============================================
# - Never commit .env to git (it's in .gitignore)
# - Use strong random values for JWT secrets in production
# - Keep production credentials secure and rotate regularly
# - See DEPLOYMENT.md for production setup guide
# - Port 5433 for local PostgreSQL to avoid conflicts with system PostgreSQL
